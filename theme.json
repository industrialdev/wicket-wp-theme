    "color": {
      "text": "var(--text-content)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--interactive)"
        },
        "typography": {
          "textDecoration": "underline"
        },
        ":hover": {
          "typography": {
            "textDecoration": "none"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--bg-interactive)",
          "text": "var(--text-button-label-reversed)"
        },
        "border": {
          "width": "var(--border-interactive-md)",
          "radius": "var(--interactive-corner-radius-md)",
          "style": "solid",
          "color": "transparent"
        },
        "spacing": {
          "padding": {
            "top": "var(--space-150)",
            "right": "var(--space-200)",
            "bottom": "var(--space-150)",
            "left": "var(--space-200)"
          }
        },
        "typography": {
